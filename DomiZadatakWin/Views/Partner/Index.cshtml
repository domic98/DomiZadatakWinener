@model List<Partner>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Lista svih partnera osiguravajućeg društva
            </h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Partner" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Kreiraj Partnera
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    FullName
                </th>
                <th>
                    PartnerNumber
                </th>
                <th>
                    PartnerTypeId
                </th>
                <th>
                    CreatedAtUtc
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.CreatedAtUtc))
            {
                <tr>
                    <td>@($"{obj.FirstName} {obj.LastName}")</td>
                    <td>@obj.PartnerNumber</td>
                    <td>@obj.PartnerTypeId</td>
                    <td>@obj.CreatedAtUtc</td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Partner" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-info-lg"></i> Details
                            </a>
                            <a asp-controller="Policy" asp-action="Index" class="btn btn-info mx-2">
                                <i class="bi bi-info-lg"></i> Details Policy
                            </a>
                            <a asp-controller="Partner" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Partner" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


